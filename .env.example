# Twilio Credentials (required)
TWILIO_ACCOUNT_SID=your_account_sid_here
TWILIO_AUTH_TOKEN=your_auth_token_here
TWILIO_FROM_NUMBER=+1234567890

# Admin test phone number for testing messages before sending to full list
ADMIN_TEST_PHONE=+1234567890

# Flask Configuration
SECRET_KEY=change-this-to-a-random-secret-key
FLASK_ENV=production

# Admin Credentials (required for login and clearing logs)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your_admin_password_here

# Database (optional, defaults to instance/sms.db)
DATABASE_URL=sqlite:///sms.db

# Scheduler Configuration
# Set to 1 to enable background scheduler (for local development)
# In production, use systemd timer instead (sms-scheduler.timer)
SCHEDULER_ENABLED=0
